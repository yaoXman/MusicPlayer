<?xml version="1.0" encoding="utf-8"?>
<!-- 播放列表 的列表的一项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15sp" >
    <Button
        android:id="@+id/btn_add_to_list"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:scaleType="fitXY"
        android:layout_marginRight="10sp"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_add_to"/>
    <TextView
        android:id="@+id/list_name"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:text="@string/str_playlist_name"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_isplaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/green_hook"
        android:contentDescription="@drawable/green_hook"
        android:textSize="20sp" />

</LinearLayout>